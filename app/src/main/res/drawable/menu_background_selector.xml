<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape
            android:shape="rectangle">
            <solid
                android:color="@color/spsColorControlHighlight" />
        </shape>
    </item>

    <item android:state_activated="true" >
        <shape
           android:shape="rectangle">
            <solid
                android:color="@color/spsColorControlActivated" />
        </shape>
    </item>

    <item >
        <shape
            android:shape="rectangle">
            <solid
                android:color="@color/spsColorControlNormal"/>
        </shape>
    </item>
</selector>